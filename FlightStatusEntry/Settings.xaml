        <Label Content="Server Name" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="lblServerName" VerticalAlignment="Top" />
        <Label Content="Port" Height="28" HorizontalAlignment="Left" Margin="12,43,0,0" Name="label5" VerticalAlignment="Top" />
        <Label Content="User Name" Height="28" HorizontalAlignment="Left" Margin="12,76,0,0" Name="lblUserName" VerticalAlignment="Top" />
        <Label Content="Password" Height="28" HorizontalAlignment="Left" Margin="12,110,0,0" Name="lblPassword" VerticalAlignment="Top" />
