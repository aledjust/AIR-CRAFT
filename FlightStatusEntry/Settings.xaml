        <TextBox Height="23" HorizontalAlignment="Left" Margin="119,78,0,0" Name="txtSvrUserId" VerticalAlignment="Top" Width="204" />
        <PasswordBox  Height="23" HorizontalAlignment="Left" Margin="119,112,0,0" Name="txtSvrPassword" VerticalAlignment="Top" Width="204" Background="LightBlue" Foreground="DarkBlue" 
         MaxLength="25" PasswordChar="*"  />
