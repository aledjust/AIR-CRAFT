        <Label Content=":" Height="28" HorizontalAlignment="Left" Margin="96,12,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content=":" Height="28" HorizontalAlignment="Left" Margin="96,43,0,0" Name="label6" VerticalAlignment="Top" />
        <Label Content=":" Height="28" HorizontalAlignment="Left" Margin="96,76,0,0" Name="label2" VerticalAlignment="Top" />
        <Label Content=":" Height="28" HorizontalAlignment="Left" Margin="96,110,0,0" Name="label3" VerticalAlignment="Top" />
        <Label Content=":" Height="28" HorizontalAlignment="Left" Margin="96,144,0,0" Name="label4" VerticalAlignment="Top" />
